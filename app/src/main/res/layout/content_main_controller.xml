<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_forward"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/arrowforward"
        android:onClick="OnForward"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="400dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_left"
        android:src="@drawable/arrowleft"
        android:onClick="OnLeft"
        android:layout_below="@+id/button_forward"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_right"
        android:src="@drawable/arrowright"
        android:onClick="OnRight"
        android:layout_below="@+id/button_forward"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_forward_left"
        android:src="@drawable/arrowforwardleft"
        android:onClick="OnForwardLeft"
        android:layout_below="@+id/button_forward"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="-10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_forward_right"
        android:src="@drawable/arrowforwardright"
        android:onClick="OnForwardRight"
        android:layout_below="@+id/button_forward"
        android:layout_marginLeft="460dp"
        android:layout_marginTop="-10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_backward_left"
        android:src="@drawable/arrowbackwardleft"
        android:onClick="OnBackwardLeft"
        android:layout_below="@+id/button_forward"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="340dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_backward_right"
        android:src="@drawable/arrowbackwardright"
        android:onClick="OnBackwardRight"
        android:layout_below="@+id/button_forward"
        android:layout_marginLeft="460dp"
        android:layout_marginTop="110dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_backward"
        android:src="@drawable/arrowbackward"
        android:onClick="OnBackward"
        android:layout_below="@+id/button_forward"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="400dp" />


</RelativeLayout>
